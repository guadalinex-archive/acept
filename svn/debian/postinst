#! /bin/sh
# postinst script for acept
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
		if [ -z `id -u squid  2> /dev/null` ]; then adduser --quiet --system --no-create-home --ingroup admin squid 2>/dev/null ; fi
        chmod 750 /usr/sbin/acept
        chown :admin /usr/sbin/acept
        chmod 700 /usr/sbin/gui-acept
        modprobe ip_conntrack_ftp 2> /dev/null
        modprobe ip_conntrack_irc 2> /dev/null

        # se hace el dpkg-divert

        dpkg-divert --quiet --package acept --add --rename --divert /etc/gdm/PostLogin/Default.orig /etc/gdm/PostLogin/Default
        dpkg-divert --quiet --package acept --add --rename --divert /etc/pam.d/gdm.orig /etc/pam.d/gdm
        dpkg-divert --quiet --package acept --add --rename --divert /etc/pam.d/gdm-autologin.orig /etc/pam.d/gdm-autologin
        dpkg-divert --quiet --package acept --add --rename --divert /etc/pam.d/login.orig /etc/pam.d/login
        dpkg-divert --quiet --package acept --add --rename --divert /etc/security/time.conf.orig /etc/security/time.conf

        # se crean los enlaces

        ln -s /etc/gdm/PostLogin/Default.acept /etc/gdm/PostLogin/Default
        ln -s /etc/pam.d/gdm.acept /etc/pam.d/gdm
        ln -s /etc/pam.d/gdm-autologin.acept /etc/pam.d/gdm-autologin
        ln -s /etc/pam.d/login.acept /etc/pam.d/login 
        ln -s /etc/security/time.conf.acept /etc/security/time.conf


    ;;
    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


