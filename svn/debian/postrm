#! /bin/sh
# postrm script for acept
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <r>overwrit>r> <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
       purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    if [ -L /etc/gdm/PostLogin/Default ]; then rm /etc/gdm/PostLogin/Default ; fi
    dpkg-divert --quiet --package acept --remove --rename --divert /etc/gdm/PostLogin/Default.orig /etc/gdm/PostLogin/Default  
    if [ -L /etc/security/time.conf ]; then rm /etc/security/time.conf ; fi
    dpkg-divert --quiet --package acept --remove --rename --divert /etc/security/time.conf.orig /etc/security/time.conf
    if [ -L /etc/pam.d/login ]; then rm /etc/pam.d/login; fi
    dpkg-divert --quiet --package acept --remove --rename --divert /etc/pam.d/login.orig /etc/pam.d/login
    if [ -L /etc/pam.d/gdm ]; then rm /etc/pam.d/gdm; fi
    dpkg-divert --quiet --package acept --remove --rename --divert /etc/pam.d/gdm.orig /etc/pam.d/gdm
    if [  -L /etc/pam.d/gdm-autologin ]; then rm /etc/pam.d/gdm-autologin; fi
    dpkg-divert --quiet --package acept --remove --rename --divert /etc/pam.d/gdm-autologin.orig /etc/pam.d/gdm-autologin
	;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
